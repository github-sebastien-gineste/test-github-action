{
    "compilerOptions": {
        "target": "es2022",
        "module": "es2022",
        "strict": true,
        "preserveConstEnums": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "dist",
        "composite": true,
        "sourceMap": true,
        "lib": ["es2020"],
    },
    "references": [
        { 
            "path": "./tsconfig.build.json",
        }
    ],
    "exclude": ["node_modules"]
}